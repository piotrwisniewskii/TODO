@model TODOUser

@{
    ViewData["Title"] = "Create a new user";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Create a new user</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                         <div class="form-group text-center">
                             <img id="ProfilePicturePreview" class="border-info rounder-circle" style="max-width: 150px"/>
                         </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Surname" class="control-label"></label>
                                <input asp-for="Surname" class="form-control" />
                                <span asp-validation-for="Surname" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ProfilePictureURL" class="control-label"></label>
                                <input asp-for="ProfilePictureURL" class="form-control" />
                                <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="ImageUrlPreview" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts{ 
            <script>
                    const pictureUrlInput = document.getElementById('ProfilePictureURL');
                    const pictureElement = document.getElementById('ProfilePicturePreview');

                    pictureUrlInput.addEventListener('change', updateSrc);

                    function updateSrc(e) {
                         pictureElement.src = e.target.value;
                    }
            </script>
}